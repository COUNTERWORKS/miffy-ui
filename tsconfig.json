{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "react-jsx",
    "outDir": "./lib",
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "types": ["node", "react"],
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}